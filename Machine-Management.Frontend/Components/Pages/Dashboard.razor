@page "/dashboard"
@inject DeviceClient Client
@rendermode InteractiveServer

<PageTitle>Dashboard</PageTitle>

<h3>Dashboard</h3>

<div class="mt-2">
    <NavLink class="btn btn-primary" href="/editDevice">New Device</NavLink>
</div>

@if (devices is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <h3>Extra information</h3>
            </div>

            <div class="col-md-4">
                <h4>List of devices</h4>
                <table class="table table-striped table-bordered table-hover mt-3">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>DeviceId</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var device in devices)
                        {
                            <tr>
                                <td></td>
                                <td>@device.Id</td>
                                <td>@device.Name</td>
                                <td>@device.Date</td>
                                <td>@device.Status</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-primary me-2" role="button" href="@DeviceUrl(device.Id)">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <button class="btn btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="@GetDeleteModalId(device)">
                                            <i class="bi bi-x-lg"></i>
                                        </button>
                                        <DeleteDevice Device="@device" />
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private Device[]? devices;

    protected override void OnInitialized()
    {
        devices = Client.Devices();
    }

    private static string DeviceUrl(int id) => $"/editdevice/{id}";

    private string GetDeleteModalId(Device device)
    {
        return $"#{DeleteDevice.GetModalId(device)}";
    }
}
