@inject DeviceClient Client
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<div class="modal fade" id="@GetModalId(Device)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button"
                        class="btn btn-danger"
                        data-bs-dismiss="modal"
                        @onclick="@Confirm">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Device? Device { get; set; }

    private string title = string.Empty;

    protected override void OnParametersSet()
    {
        title = $"Delete {Device?.Name}?";
    }

    public static string GetModalId(Device? device)
    {
        ArgumentNullException.ThrowIfNull(device);
        return $"deleteModal-{device.Id}";
    }

    private void Confirm()
    {
        Client.RemoveDevice(Device!.Id);
        NavigationManager.NavigateTo("/dashboard",true);
    }
}
